<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.asus.doinam.MainActivity">

    <TextView
        android:text="Năm dương lịch:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:layout_marginTop="13dp"
        android:id="@+id/textViewDL" />

    <Button
        android:text="Đổi Năm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDL"
        android:layout_toRightOf="@+id/textViewDL"
        android:layout_toEndOf="@+id/textViewDL"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:id="@+id/buttonChuyen" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonChuyen"
        android:layout_alignStart="@+id/buttonChuyen"
        android:id="@+id/editTextDL" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textViewAL"
        android:layout_alignLeft="@+id/buttonChuyen"
        android:layout_alignStart="@+id/buttonChuyen"
        android:id="@+id/textViewKQ" />

    <TextView
        android:text="Năm Âm Lịch:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/textViewAL"
        android:layout_below="@+id/buttonChuyen"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/buttonChuyen"
        android:layout_toStartOf="@+id/buttonChuyen" />

</RelativeLayout>
